<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".remote.ProdutosActivity">




    <Button
        android:id="@+id/btnVoltarTelaInicial2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar tela inicial" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Escolha o barbeiro"/>

    <Spinner
        android:tooltipText="texto"
        android:id="@+id/spinnerview"
        android:layout_width="match_parent"
        android:layout_height="100dp"></Spinner>

    <EditText
        android:layout_width="match_parent"
        android:text="Selecione o Horario"
        android:id="@+id/txthorario"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_height="50dp" />



</LinearLayout>
