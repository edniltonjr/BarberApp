<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pngagend"
    android:orientation="vertical"
    tools:context=".remote.CadastroProdutos">

    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@drawable/agendamento"/>


    <Button
        android:hint="Selecione a Data"
        android:backgroundTint="@android:color/white"
        android:id="@+id/edtHorario"
        android:inputType="none"
        android:layout_width="match_parent"
        android:focusable="false"
        android:drawableLeft="@drawable/calendario"
        android:layout_height="wrap_content" />



    <Spinner
        android:id="@+id/spinnerview1"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="41dp"></Spinner>


    <Spinner
        android:background="@color/colorWhite"
        android:id="@+id/spinnerview2"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textAlignment="center"
        ></Spinner>



    <Button
        android:hint="Selecione o HorÃ¡rio"
        android:gravity="center"
        android:id="@+id/edtValor"
        android:inputType="numberDecimal"
        android:backgroundTint="@android:color/white"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/time"
        android:layout_height="wrap_content" />






    <Button

        android:background="@drawable/agendar"
        android:id="@+id/btnGravar"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center" />


        />

    <Button
        android:id="@+id/btnVoltarTelaInicial"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/voltar"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center" />



</LinearLayout>
