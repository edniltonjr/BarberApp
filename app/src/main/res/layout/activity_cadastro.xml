<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".remote.CadastroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <EditText
                android:id="@+id/edtCadNome"
                android:layout_width="match_parent"
                android:hint="Seu Nome:"
                android:inputType="textCapCharacters"
                android:layout_height="wrap_content"

                />

            <EditText
                android:id="@+id/edtCadSobrenome"
                android:layout_width="match_parent"
                android:hint="Sobrenome:"
                android:inputType="textCapCharacters"
                android:layout_height="wrap_content"

                />

            <EditText
                android:id="@+id/edtCadAniversario"
                android:layout_width="match_parent"
                android:hint="AniversÃ¡rio:"
                android:inputType="date"
                android:layout_height="wrap_content"

                />

            <EditText
                android:id="@+id/edtCadEmail"
                android:layout_width="match_parent"
                android:hint="E-mail:"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"

                />

            <EditText
                android:id="@+id/edtCadSenha"
                android:layout_width="match_parent"
                android:hint="Senha:"
                android:inputType="textPassword"
                android:layout_height="wrap_content"

                />

            <EditText
                android:id="@+id/edtCadConfirmarSenha"
                android:layout_width="match_parent"
                android:hint="Confirme sua Senha:"
                android:inputType="textPassword"
                android:layout_height="wrap_content"

                />


            <RadioGroup
                android:id="@+id/rgSexo"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">


                <RadioButton
                    android:id="@+id/rbMasculino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Masculino"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary"
                    android:textColorLink="@android:color/black"
                    android:textCursorDrawable="@android:color/holo_blue_bright" />
                
                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/rbFeminino"
                    android:text="Feminino"
                    android:layout_height="wrap_content" />


            </RadioGroup>

            <Button
                android:id="@+id/btnGravar"
                android:layout_width="match_parent"
                android:text="Gravar"
                android:layout_height="wrap_content" />



        </LinearLayout>




    </ScrollView>

</LinearLayout>