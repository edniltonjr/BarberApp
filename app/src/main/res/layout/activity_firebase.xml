<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.juniorsantos.barberapp.remote.LoginFire">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/logob"
        android:padding="10dp" />





    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login" />


    <EditText

        android:id="@+id/edtEmail"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/input"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@android:color/holo_blue_light" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/senha" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:background="@drawable/input"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:inputType="textPassword"
        android:textCursorDrawable="@android:color/holo_blue_light" />

    <TextView

        android:id="@+id/edtAbreCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:gravity="center"
        android:text="NÃ£o tem cadastro? Clique aqui!"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/btnLogar"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:layout_height="40dp"
        android:background="@drawable/entrar"
        />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:background="@drawable/sair"
        />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressbar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cpb_background_progressbar_color="#b6bbd8"
        app:cpb_background_progressbar_width="10dp"
        app:cpb_progressbar_color="#3f51b5"
        app:cpb_progressbar_width="20dp" />









</LinearLayout>
