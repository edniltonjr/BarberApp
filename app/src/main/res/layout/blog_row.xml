<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:background="@drawable/backprincipal"
    android:layout_margin="10dp"

    android:elevation="20dp">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:background="#000"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAtender"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:backgroundTint="#32CD32"
            android:focusable="false"
            android:hint="ATENDER"
            android:textSize="15dp"
            android:inputType="none"
            android:textColorHint="#fff" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tximg"
            android:layout_width="62dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txnomei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="TESTE"
            android:textColor="#fff"
            android:textSize="15dp"
            />


        <TextView
            android:id="@+id/txhorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HorÃ¡rio"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            />


        <TextView
            android:id="@+id/txdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/txnome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente:"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"

            />


        <Button
            android:id="@+id/btnFINALIZAR"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:backgroundTint="#FF0000"
            android:enabled="false"
            android:focusable="false"
            android:hint="FINALIZAR"
            android:inputType="none"
            android:textColorHint="#fff" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/txistatus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-30dp"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/imgstatus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:layout_marginLeft="260dp"
            android:textSize="15dp"

            />


    </LinearLayout>

</android.support.v7.widget.CardView>

